<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.EmptyFragment"
    android:background="@color/white"
    android:paddingTop="@dimen/margin_xxlarge">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivEmptyImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/empty_box"
        android:layout_marginTop="@dimen/margin_xxlarge"
        android:paddingTop="@dimen/margin_xxlarge"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEmptyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Empty"
        android:textSize="@dimen/text_heading_1x"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_medium_3"
        android:layout_marginHorizontal="@dimen/margin_xxlarge"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEmptyDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Empty Description"
        android:textSize="@dimen/text_regular_2x"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginHorizontal="@dimen/margin_xlarge"/>


</LinearLayout>